#!/usr/bin/env bash

XDG_CONFIG_HOME=${XDG_CONFIG_HOME:-$HOME/.config}

cprintf() {
	case $1 in
		green) printf "\e[32m" ;;
		blue)  printf "\e[34m" ;;
	esac

	printf "%b%b\n" "${@:2}" "\e[39m" >&2
}

main() {
	cprintf blue "Removing config..."
	rm -vr "$XDG_CONFIG_HOME/spinner"

	cprintf blue "\nRemoving binary..."
	sudo rm -v "/usr/bin/spinner"

	cprintf green "\nUninstallation complete!"
}

main
